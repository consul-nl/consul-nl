<div id="<%= dom_id(card) %>"
     class="card small-12 medium-<%= card.columns %> column margin-bottom end">
  <%= link_to card.link_url do %>
    <figure class="figure-card">
      <% if card.title.present? %>
        <div class="gradient"></div>
      <% end %>
      <% if card.image.present? %>
        <%= image_tag(card.image.variant(:large), alt: card.image.title) %>
      <% end %>
      <% if card.label.present? or card.title.present? %>
        <figcaption>
          <% if card.label.present? %>
            <span><%= card.label %></span>
          <% end %>
          <br>
          <% if card.title.present? %>
            <h3><%= card.title %></h3>
          <% end %>
        </figcaption>
      <% end %>
    </figure>
    <% if card.description.present? %>
      <p class="description"><%= card.description %></p>
    <% end %>
    <p><%= card.link_text %></p>
  <% end %>
</div>
